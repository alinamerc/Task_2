<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_detail">

        <ImageView
            android:id="@+id/detail_face_image_view"
            android:background="@drawable/image_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="48dp"
            android:scaleX="2"
            android:scaleY="2"/>

        <TextView
            android:id="@+id/detail_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/detail_face_image_view"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_selected"
            android:text="Ivanov"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/detail_phone_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/detail_name_text_view"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_selected"
            android:text="@string/phones"
            android:textSize="24dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detail_phone_container"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/detail_phone_title_text_view"
            android:layout_below="@+id/detail_name_text_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_phone_frame1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/detail_phone1_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_selected"
                    android:text="+79270002211"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/detail_call_image_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="-5dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_call"/>

                <ImageButton
                    android:id="@+id/detail_sms_image_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="-5dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_sms"/>

            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_phone_frame2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/detail_phone2_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_selected"
                    android:text="+79270002211"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/detail_call_image_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="-5dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_call"/>

                <ImageButton
                    android:id="@+id/detail_sms_image_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="-5dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_sms"/>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>